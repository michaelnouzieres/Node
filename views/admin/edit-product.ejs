<%- include("../includes/head.ejs") %>

<main>
  <form class="product-form" action="/admin/save-product" method="POST">
    <div class="form-control">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" value="<%= title %>" />
    </div>
    <div class="form-control">
      <label for="imgUrl">Image URL</label>
      <input type="text" name="imgUrl" id="imgUrl" value="<%= imgUrl %>" />
    </div>
    <div class="form-control">
      <label for="price">Price</label>
      <input type="number" name="price" id="price" value="<%= price %>" />
    </div>

    <div class="form-control">
      <label for="description">Description</label>
      <textarea type="text" name="description" id="description" rows="5">
<%= description %></textarea
      >
      <input type="hidden" name="CSRFToken" value="<%= csrfToken %>" />
      <input type="hidden" name="productId" value="<%= id %>" />
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <button class="btn" type="submit">Save Edits</button>
  </form>
</main>

<%- include("../includes/end.ejs") %>
